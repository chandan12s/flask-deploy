pipeline {
    agent any
    environment{
        DOCKERHUB_CREDS = credentials('dockerhub')
        MINIKUBE_PATH = 'C:\\minikube'
    }
    stages {
        stage('Clone Repo') {
            steps {
                checkout scm
                sh 'ls *'
            }
        }
        stage('Build Image') {
            steps {
                //sh 'docker build -t raj80dockerid/jenkinstest ./pushdockerimage/' (this will use the tag latest)
		sh 'docker build -t chandans12/flask-project:$BUILD_NUMBER ./venv/'
            }
        }
        stage('Docker Login') {
            steps {
                //sh 'docker login -u $DOCKERHUB_CREDS_USR -p $DOCKERHUB_CREDS_PSW' (this will leave the password visible)
                sh 'echo $DOCKERHUB_CREDS_PSW | docker login -u $DOCKERHUB_CREDS_USR --password-stdin'
                }
            }

        stage('Docker Push') {
            steps {
		//sh 'docker push raj80dockerid/jenkinstest' (this will use the tag latest)
                sh 'docker push chandans12/flask-project:$BUILD_NUMBER'
                }
            }
         stage('Pull from docker') {
            steps {
                sh 'docker pull chandans12/flask-project:1'
                }
            }
         stage('Start minikube') {
            steps {
                bat "set PATH=%MINIKUBE_PATH%;%PATH% && minikube start"
                }
            }
         stage('Apply deployment.yaml') {
            steps {
                sh 'kubectl apply -f deployment.yaml'
                }
            }
         stage('Get services') {
            steps {
                sh 'kubectl get services'
                }
            }
         stage('Get the url') {
            steps {
                sh 'minikube service project-flask-service --url'
                }
            }
        }
    post {
		always {
			sh 'docker logout'
		}
	 }
    }
